<html>

    <div class="show_clip_container">
        <div class="display_clip">
          <%= get_video_iframe(@clip.clip_src) %>
          <h3> Actress: <%= @actress.first_name %> &nbsp <%= @actress.last_name %> </h3>
          <h3> Movie:   <%= @clip.movie %> </h3>
          <h3> Info:    <%= @clip.clip_description %> </h3>
          <h3> Tags: &nbsp <span style="background-color:#6495ED"> <%= @clip.clip_tag1 %> </span>
                     &nbsp <span style="background-color:#6495ED"> <%= @clip.clip_tag2 %> </span>
                     &nbsp <span style="background-color:#6495ED"> <%= @clip.clip_tag3 %> </span> </h3>
          </div>
    </div>

    <div class="suggested_clips">
    <% @suggested_clips.each do |suggested_clip|
       @temp_actress = Actress.find_by_id(suggested_clip.actress_id)%>
        <div class="suggested_clip">
            <%= link_to image_tag(suggested_clip.image_url), {:controller => "home", :action => "clip", :id   => suggested_clip.id }%>
            <div class="suggested_clip_info">
              <p> Actress:    <%= link_to @temp_actress.first_name, {:controller => "home", :action => "actress", :id => @temp_actress.id} %> &nbsp
                              <%= link_to @temp_actress.last_name, {:controller => "home", :action => "actress", :id => @temp_actress.id} %> </p>
              <p> Movie:      <%= suggested_clip.movie %> </p>
              <p> Info:       <%= suggested_clip.clip_description %> </p>
              <p> Date Added: <%= suggested_clip.created_at %> </p>
              <p> Tags:  &nbsp <span style="background-color:#6495ED"> <%= suggested_clip.clip_tag1 %> </span>
                         &nbsp <span style="background-color:#6495ED"> <%= suggested_clip.clip_tag2 %> </span>
                         &nbsp <span style="background-color:#6495ED"> <%= suggested_clip.clip_tag3 %> </span> </p>
            </div>
        </div>
    <%end %>
    </div>

</html>
