<p id="notice"><%= notice %></p>

<h1>Feature Clips</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feature_clips.each do |feature_clip| %>
      <tr>
        <td><%= feature_clip.description %></td>
        <td><%= link_to 'Show', feature_clip %></td>
        <td><%= link_to 'Edit', edit_feature_clip_path(feature_clip) %></td>
        <td><%= link_to 'Destroy', feature_clip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

